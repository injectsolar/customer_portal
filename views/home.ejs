<html>
<head>
    <title>Home Page</title>
    <meta charset="UTF-8">
</head>
<body>

<h1>Welcome to Home Page
    <% if (typeof user != "undefined") { %>
    <%= user.username %>
    <% } %>
    !</h1>
<!-- show any messages that come back with authentication -->
<% if (message.length > 0) { %>
<p style="color: red"><%= message %></p>
<% } %>
<% if(typeof user == 'undefined'){ %>
<a href="./login">Login</a>
<a href="./signup">SignUp</a>
<a href="./epc_signup">EPC User SignUp</a>
<% } else { %>
<% if(user.is_email_verified != true){ %>
<p>Please verify your email by clicking on the verification link sent to your email</p>

<p>If email not received <a href="./resend_email_verification">Resend Verification Link</a></p>
<% } %>

<% if(user.role_str == 1){ %>
<p><a href="./clients">View Clients</a></p>

<p><a href="./signup_client">Sign Up Client</a></p>
<% } else if(typeof epc_person != "undefined" && epc_person.username){ %>
<p>Your EPC person is <%= epc_person.username %></p>

<p><a href="./epc_person">View EPC_Person Details</a></p>

<% } %>

<a href="./change_password">Change Password</a>
<a href="./logout">LogOut</a>
<% } %>
</body>
</html>